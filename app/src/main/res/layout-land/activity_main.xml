<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/pixels_2"
            android:paddingTop="@dimen/pixels_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/counter"
                android:textColor="@color/black"
                android:textSize="@dimen/text_small" />

            <Button
                android:id="@+id/btn_counter_plus"
                android:layout_width="@dimen/pixels_4"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pixels_1"
                android:text="@string/button_plus"
                android:textSize="@dimen/text_small" />

            <Button
                android:id="@+id/btn_counter_minus"

                android:layout_width="@dimen/pixels_4"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pixels_1"
                android:text="@string/button_minus"
                android:textSize="@dimen/text_small" />

            <Button
                android:id="@+id/btn_counter_0"

                android:layout_width="@dimen/pixels_4"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pixels_1"
                android:text="@string/button_zero"
                android:textSize="@dimen/text_small" />

            <Button
                android:id="@+id/btn_counter_rnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pixels_1"
                android:text="@string/button_random_int"
                android:textSize="@dimen/text_small" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/pixels_2"
                android:paddingTop="@dimen/pixels_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/info"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_1"
                    android:onClick="info"
                    android:text="@string/button_device"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_1"
                    android:onClick="info"
                    android:text="@string/button_time"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_1"
                    android:onClick="info"
                    android:text="@string/button_toast"
                    android:textSize="@dimen/text_small" />

            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/pixels_2"
                android:paddingTop="@dimen/pixels_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/color"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:id="@+id/btn_color_r"

                    android:layout_width="@dimen/pixels_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_3"
                    android:text="@string/button_r"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:id="@+id/btn_color_g"

                    android:layout_width="@dimen/pixels_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_2"
                    android:text="@string/button_g"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:id="@+id/btn_color_b"
                    android:layout_width="@dimen/pixels_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_2"
                    android:text="@string/button_b"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:id="@+id/btn_color_m"
                    android:layout_width="@dimen/pixels_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_2"
                    android:text="@string/button_m"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/pixels_2"
                android:paddingTop="@dimen/pixels_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/background"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:layout_width="@dimen/pixels_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_3"
                    android:onClick="setBg"
                    android:text="@string/button_1"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:layout_width="@dimen/pixels_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_2"
                    android:onClick="setBg"
                    android:text="@string/button_2"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:layout_width="@dimen/pixels_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_2"
                    android:onClick="setBg"
                    android:text="@string/button_3"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:layout_width="@dimen/pixels_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_2"
                    android:onClick="setBg"
                    android:text="@string/button_4"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>
        </HorizontalScrollView>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/pixels_2"
                android:paddingTop="@dimen/pixels_2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/image"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_3"
                    android:onClick="setImage"
                    android:text="@string/button_cat"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_2"
                    android:onClick="setImage"
                    android:text="@string/button_dog"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_2"
                    android:onClick="setImage"
                    android:text="@string/button_parrot"
                    android:textSize="@dimen/text_small" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pixels_2"
                    android:onClick="setImage"
                    android:text="@string/button_random_zoo"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/pixels_5"
            android:layout_height="@dimen/pixels_5"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/pixels_2"
            android:src="@drawable/cat" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/pixels_2"
            android:gravity="center"
            android:text="@string/info"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>
</ScrollView>